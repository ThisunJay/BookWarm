<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    android:orientation="vertical"
    tools:context=".DashboardModify">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/txtdashbord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:text="Modify Categories"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtdashbord"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="50dp"
            android:text="You can modify Categories also"
            android:textColor="#52BAFF"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:onClick="goBack"
            android:src="@drawable/backbtn" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        >

        <Button
            android:id="@+id/btnFragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changeFragment"
            android:background="#FFFFFF"
            android:text="ADD" />

        <Button
            android:id="@+id/btnFragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changeFragment"
            android:background="#FFFFFF"
            android:text="UPDATE" />

        <Button
            android:id="@+id/btnFragment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changeFragment"
            android:background="#FFFFFF"
            android:text="DELETE" />

    </LinearLayout>

    <fragment
        android:id="@+id/fgmntDefault"
        android:name="com.example.student.bookworm.AddcategoryFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>